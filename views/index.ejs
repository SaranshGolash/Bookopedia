<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bookopedia</title>
        <link rel="stylesheet" href="/style.css">
    </head>
    <body>
        <section class="main-body">
            <div class="heading">
                <h1>Bookopedia</h1>
                <p>Welcome! Here you can see and update the list of books read by you.</p>
            </div>
            <div class="sub-body">
                <table>
                    <tr>
                        <th>Id</th>
                        <th>Book Name</th>
                        <th>Author</th>
                        <th>Source</th>
                        <th class="remove">Remove</th>
                    </tr>
                    <% for (let book of bookShelf) {%>
                    <tr>
                        <td><%= book.id %></td>
                        <td><%= book.name %></td>
                        <td><%= book.author %></td>
                        <td><%= book.source %></td>
                        <td class="remove">
                            <button class="delete-btn" data-id="<%= book.id %>">Delete</button>
                        </td>
                    </tr>
                    <% } %>
                </table>
            </div>
            <% if(locals.error) { %>
                <div class="error-block">
                    <p><%= error %></p>
                </div>
                <% } %>
            <div class="add">
                <p>Wanna add a new book to the list? Click below to do so ðŸ‘‡</p>
                <button id="addBtn" onclick="window.location.href='/add'">NEW ENTRY</button>
            </div>
        </section>
        <script>
            document.addEventListener("DOMContentLoaded", () => {
                const deleteButtons = document.querySelectorAll(".delete-btn");

                deleteButtons.forEach((btn) => {
                    btn.addEventListener("click", async (e) => {
                        const id = btn.getAttribute("data-id");
                        const confirmDelete = confirm("Are you sure you want to delete this book?");

                        if (confirmDelete) {
                            try {
                                const res = await fetch(`/delete/${id}`, {
                                method: "DELETE",
                                });

                                if (res.ok) {
                                    // Remove row from DOM
                                    btn.closest("tr").remove();
                                } else {
                                    alert("Failed to delete the entry.");
                                }
                            } catch (err) {
                                console.error("Error deleting book:", err);
                            }
                        }
                    });
                });
            });
        </script>
    </body>
</html>